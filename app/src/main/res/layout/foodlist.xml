<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/shoprounded"/>

    <ImageView
        android:id="@+id/FoodImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintBottom_toBottomOf="@id/background"
        android:src="@color/white"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        app:layout_constraintLeft_toRightOf="@id/FoodImage"
        app:layout_constraintTop_toTopOf="@id/FoodImage"
        tools:text="Mushroommmmmmmmmmmmmmdmmmmmmmmmmmmmddddmmmmmmmmmmmm"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/price"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/FoodName"
        android:textStyle="bold"
        android:maxLines="1"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/desc"
        app:layout_constraintLeft_toLeftOf="@id/FoodName"
        app:layout_constraintTop_toBottomOf="@id/FoodName"
        app:layout_constraintRight_toLeftOf="@id/price"
        android:text="Medium"
        android:maxEms="15"
        android:textColor="#D7FFFFFF"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/FoodImage"
        app:layout_constraintBottom_toBottomOf="@id/FoodImage"
        tools:text="0000"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:id="@+id/price"/>

</androidx.constraintlayout.widget.ConstraintLayout>